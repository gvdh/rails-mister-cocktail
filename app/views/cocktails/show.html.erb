<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= "http://www.riodcachaca.com/media/cocktails/fullresolution/martinis/passionpomegranateJPG.jpg" %>);">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> - <%= dose.ingredient.name %></li>
      <% end %>
    </ul>
    <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
  </div>
</div>

