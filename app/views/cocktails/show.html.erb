<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path("afof7mukhhihhrp7uztj.jpg") %>');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li style="margin: 10px;"><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "Delete", dose_path(dose), method: :delete, class: "btn btn-danger" %></li>
        <br>
      <% end %>
    </ul>
    <% @cocktail.reviews.each do |review| %>
      <ul>
        <li>
          <%= review.title %> - <%= review.content %>
          <%= review.rating %>
        </li>
      </ul>
    <% end %>
    <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
    <%= link_to "Add a review", new_cocktail_review_path(@cocktail), class: "btn btn-primary" %>

  </div>
</div>

