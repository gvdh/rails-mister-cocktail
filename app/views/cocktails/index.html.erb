  <div class="container">
    <div class="row">
      <% if @cocktails  %>
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo unless cocktail.photo.blank? %>'); border-radius: 5px; box-shadow: 2px solid black">
                <div class="card-description">
                  <h2><%= cocktail.name %></h2>
                </div>
              <%= link_to "", cocktail, class: "card-link" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
