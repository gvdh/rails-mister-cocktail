<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path("afof7mukhhihhrp7uztj.jpg") %>');">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo unless cocktail.photo.blank? %>');">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
          <%= link_to "", cocktail, class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
